@model IEnumerable<Employees>

@{
    ViewData["Title"] = "Employee Management";
}

<div class="page-title">
    <h2>Employees</h2>
</div>

<div class="page-body">
    <div class="row">
        <div class="table-responsive-md col-12">
            <table class="table">
                <thead>
                    <tr class="text-center">
                        <th>#</th>
                        <th>Image</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Birthday</th>
                        <th>E-mail</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td class="align-middle col-lg-auto">
                            @Html.DisplayFor(modelItem => item.EmployeeID)
                        </td>
                        <td class="align-middle col-lg-auto">
                            <img style="max-width: 150px" src="@item.Image" />
                        </td>
                        <td class="align-middle col-lg-auto">
                            @Html.DisplayFor(modelItem => item.EmployeeFirstName)
                        </td>
                        <td class="align-middle col-lg-auto">
                            @Html.DisplayFor(modelItem => item.EmployeeLastName)
                        </td>
                        <td class="align-middle col-lg-auto">
                            @Html.DisplayFor(modelItem => item.EmployeeBirthday)
                        </td>
                        <td class="align-middle col-lg-auto">
                            @Html.DisplayFor(modelItem => item.EmployeeEmail)
                        </td>
                        <td class="align-middle col-lg-auto">
                            <a class="btn btn-info bi bi-eye text-white">&nbsp;View</a>
                            <a class="btn btn-primary bi bi-pencil-square text-white">&nbsp;Edit</a>
                            <a class="btn btn-danger bi bi-trash text-white">&nbsp;Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<div class="text-white" style="position: fixed; right: 25px; bottom: 25px">
    <a asp-controller="Employees" asp-action="CreateEmployee" class="btn btn-success">
        <i class="bi bi-plus-circle"></i>&nbsp;Add New Employee
    </a>
</div>
