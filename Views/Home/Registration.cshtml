@{
    ViewData["Title"] = "Registration";
}

<div class="container">
    <div class="text-center">
        <h1>Register</h1>
    </div>

    <div class="col col-lg-8 col-lg-offset-2 justify-content-center">
        <div class="form-group">
            <label>First Name</label>
            <input class="form-control" />

            <label>Last Name</label>
            <input class="form-control" />

            <label>Contact Number</label>
            <input class="form-control" />

            <label>Email Address</label>
            <input class="form-control" />

            <label>Username</label>
            <input class="form-control" />

            <label>Password</label>
            <input class="form-control" type="password" />

            <label>Re-try Password</label>
            <input class="form-control" type="password" />

            <div style="margin-top: 15px">
                Already registered? <a asp-area="" asp-controller="Home" asp-action="Login">Click here</a>

                <span class="float-right">
                    <input type="button" class="btn btn-info" value="Register" />
                </span>
            </div>
        </div>
    </div>
</div>
