@model Employees

@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="text-center">
        <h1>Sign In</h1>
    </div>
    <form asp-action="Login" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col col-lg-8 col-lg-offset-2 justify-content-center">
            <div class="form-group">
                <label> Username</label>
                <input asp-for="Username" class="form-control" />

                <label> Password</label>
                <input asp-for="EmployeePass" class="form-control" type="password" />

                <div style="margin-top: 15px">
                    <a asp-area="" asp-controller="Home" asp-action="UnderConstruction">Forgot your password?</a>

                    <span class="float-right">
                        <input type="submit" class="btn btn-info" value="Sign In" />
                    </span>
                </div>

                <div class="text-center">Not yet registered? <a asp-area="" asp-controller="Home" asp-action="Registration">Click here</a></div>

            </div>
        </div>
    </form>
        
</div>
